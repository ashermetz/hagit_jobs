<h1><center>Listing jobs</center></h1>

<table>
  <tr>
    <th>Job</th>
    <th>Pay per hour</th>
    <th>Add hour per</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.job %></td>
    <td><%= job.pay_per_hour %></td>
    <td><%= job.add_hour_per %></td>
    <td><%= job.description %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

